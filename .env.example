# jarvis-mcp server configuration

# Server settings
JARVIS_MCP_HOST=0.0.0.0
JARVIS_MCP_PORT=8011

# Tool groups to enable (comma-separated)
JARVIS_MCP_TOOLS=logs,debug

# Service URLs (use host.docker.internal when running in Docker)
JARVIS_LOGS_URL=http://host.docker.internal:8006
JARVIS_AUTH_URL=http://host.docker.internal:8007
JARVIS_RECIPES_URL=http://host.docker.internal:8001
JARVIS_COMMAND_CENTER_URL=http://host.docker.internal:8002
JARVIS_WHISPER_URL=http://host.docker.internal:8012
JARVIS_TTS_URL=http://host.docker.internal:8009
JARVIS_LLM_PROXY_URL=http://host.docker.internal:8000

# App credentials for authenticated endpoints (required for jarvis-logs)
JARVIS_APP_ID=jarvis-mcp
JARVIS_APP_KEY=your-app-key-here
