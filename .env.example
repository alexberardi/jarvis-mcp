# jarvis-mcp server configuration

# Server settings
JARVIS_MCP_HOST=0.0.0.0
JARVIS_MCP_PORT=8011

# Tool groups to enable (comma-separated)
JARVIS_MCP_TOOLS=logs,debug

# Service discovery (preferred - fetches all URLs from config service)
JARVIS_CONFIG_URL=http://localhost:8013
# Set to "dockerized" when running in Docker to get host.docker.internal URLs
# JARVIS_CONFIG_URL_STYLE=dockerized

# Fallback service URLs (only used if config service unavailable)
# Use host.docker.internal when running in Docker
JARVIS_LOGS_URL=http://localhost:8006
JARVIS_AUTH_URL=http://localhost:8007
JARVIS_RECIPES_URL=http://localhost:8001
JARVIS_COMMAND_CENTER_URL=http://localhost:8002
JARVIS_WHISPER_URL=http://localhost:8012
JARVIS_TTS_URL=http://localhost:8009
JARVIS_LLM_PROXY_URL=http://localhost:8000

# App credentials for authenticated endpoints (required for jarvis-logs)
JARVIS_APP_ID=jarvis-mcp
JARVIS_APP_KEY=your-app-key-here
